<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fx:id="rootHBox" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <ImageView fx:id="itemImageView" fitHeight="150.0" fitWidth="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets left="10.0" right="10.0" />
      </HBox.margin>
    </ImageView>
    <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="300.0" HBox.hgrow="ALWAYS">
      <children>
        <Label fx:id="itemNameLabel" text="Наименование товара">
          <font>
            <Font name="Comic Sans MS" size="12.0" />
          </font>
        </Label>
        <Text fx:id="itemDescriptionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Описание товара" wrappingWidth="450.0">
          <font>
            <Font name="Comic Sans MS" size="12.0" />
          </font>
        </Text>
        <Label fx:id="itemManufacturerLabel" text="Производитель: ">
          <font>
            <Font name="Comic Sans MS" size="12.0" />
          </font>
        </Label>
        <Label fx:id="itemCostLabel" text="Цена: ">
          <font>
            <Font name="Comic Sans MS" size="12.0" />
          </font>
        </Label>
      </children>
      <HBox.margin>
        <Insets right="10.0" />
      </HBox.margin>
    </VBox>
    <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
      <children>
        <Label fx:id="itemQuantityInStockLabel" alignment="TOP_RIGHT" text="Наличие на складе">
          <VBox.margin>
            <Insets right="10.0" />
          </VBox.margin>
          <font>
            <Font name="Comic Sans MS" size="12.0" />
          </font>
        </Label>
      </children>
    </VBox>
  </children>
  <padding>
    <Insets bottom="10.0" top="10.0" />
  </padding>
  <userData>
    <fx:reference source="controller"/>
  </userData>
  <properties>
    <ctrl>
      <fx:reference source="controller"/>
    </ctrl>
  </properties>
</HBox>
